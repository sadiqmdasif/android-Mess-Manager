<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.simplifiedcoding.mysqlcrud.MemberActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Deposit"
        android:id="@+id/buttonMemberDeposit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal"
        android:id="@+id/buttonMemberMeal"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/buttonMemberDeposit"
        android:layout_alignLeft="@+id/buttonMemberDeposit"
        android:layout_alignStart="@+id/buttonMemberDeposit"
        android:layout_alignRight="@+id/buttonMemberDeposit"
        android:layout_alignEnd="@+id/buttonMemberDeposit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Bazar"
        android:id="@+id/buttonMemberDBazar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
