<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.simplifiedcoding.mysqlcrud.AdminPanel">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deposit"
        android:id="@+id/buttonAdminPanelDeposit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="93dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal"
        android:id="@+id/buttonAdminPanelMeal"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/buttonAdminPanelDeposit"
        android:layout_alignLeft="@+id/buttonAdminPanelDeposit"
        android:layout_alignStart="@+id/buttonAdminPanelDeposit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Bazar"
        android:id="@+id/buttonAdminPanelDBazar"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonAdminPanelMeal"
        android:layout_alignStart="@+id/buttonAdminPanelMeal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Chart"
        android:id="@+id/buttonAdminPanelMealChart"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/buttonAdminPanelDBazar"
        android:layout_alignLeft="@+id/buttonAdminPanelDBazar"
        android:layout_alignStart="@+id/buttonAdminPanelDBazar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bazar History"
        android:id="@+id/buttonAdminPanelBHistory"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonAdminPanelMealChart"
        android:layout_alignLeft="@+id/buttonAdminPanelMealChart"
        android:layout_alignStart="@+id/buttonAdminPanelMealChart" />
</RelativeLayout>
